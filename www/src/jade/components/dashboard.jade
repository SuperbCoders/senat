mixin participant(post, committee, member)
  .dash_b_participant
    .participant_avatar
      - if (committee || member)
        img(src='./img/member.png')
      - else
        img(src='./img/participant.png')
    .participant_name Долгов Ч.М.
    .participant_post= post 
    - if (committee)
      .participant_committee= committee

