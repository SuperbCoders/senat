              span.dash_b_status_counter
                span.mb.i-check.dash_b_icon
                span.mb 10
              span.dash_b_status_counter
                span.mb.i-cross.dash_b_icon
                span.mb 5
              span.dash_b_status_counter
                span.mb.i-circle-minus.dash_b_icon
