block variables
  - var bodyClass = 'page_meeting';
  - var htmlClass = 'stick_footer action_header';
  - var pageTitle = 'Заседание';
  - var pageDescription = 'Описание страницы';
  - var activePage = 1;
  - var hasUnitNav = true;
  - var actionNavbarColor = 'clr_green';
  - var hasChatNav = true;

include ../components/dashboard

extends ../components/layout
block head
block content
  .wrapper
    include ../components/header
    include ../components/action_navbar

    .main_content._has_footer_controls
      .action_brief
        .section_inner
          a.brief_control._prev.btn_gray_2(href='#')
          a.brief_control._next.btn_gray_2(href='#')
          
          +action_brief(23, '_in_process', false, 2, 0, false, undefined, false, false, false, undefined, '', true)
        .action_brief_progress
          .action_brief_val(style='width: 58%;')
          .section_inner.clearfix
            .action_brief_time 1 час 10 минут длительность заседания
            .action_brief_left 40 минут до конца

      .section_inner
        .dash_box_title
          .fl.clr_blue ПОВЕСТКА
          .fr
            .menu_holder
              .dash_b_menu_btn.dashMenuBtn: .dash_b_menu_icon
              .dash_b_menu_w.menu_w
                ul.dash_b_menu_list
                  li.dash_menu_group
                    span.mb Действия
                  li: a.dash_menu_link(href='#')
                    span.mb Редактировать

        ul.dashboard_list
          li
            +action_brief(false, '_in_vote', true, 1, 1, false, ['Текст документа подготовлен. Необходимо согласовать дополнительные гарантийные'], false, false, false, '', true)
          li
            +action_brief(false, '_in_vote', true, 1, 1, true, ['Текст документа подготовлен. Необходимо согласовать дополнительные гарантийные'], false, false, false, '', true)
          li
            +question_box(0, '_approved')
          li
            +question_box(29, '_rejected', true)
            
        .text_center.more_block.mod_2
          a.btn_v1.btn_white_2.dash_btn(href='#') ПОКАЗАТЬ ВСЕ 34 ВОПРОСА

        .dash_box_title
          .fl.clr_orange 4 ПОРУЧЕНИЯ
          .fr
            .menu_holder
              .dash_b_menu_btn.dashMenuBtn: .dash_b_menu_icon
              .dash_b_menu_w.menu_w
                ul.dash_b_menu_list
                  li.dash_menu_group
                    span.mb Действия
                  li: a.dash_menu_link(href='#')
                    span.mb Редактировать
            
        ul.dashboard_list
          li
            +instruction_box('', '_new')
          li
            +instruction_box('', '_new')
          li
            +instruction_box('', '_in_process')
          li
            +instruction_box('', '_new')

        .text_center.more_block.mod_2
          a.btn_v1.btn_white_2.dash_btn(href='#') ПОКАЗАТЬ ВСЕ 4 ПОРУЧЕНИЯ
          
        .dash_box_title
          .fl УЧАСТНИКИ
          .fr
            .menu_holder
              .dash_b_menu_btn.dashMenuBtn: .dash_b_menu_icon
              .dash_b_menu_w.menu_w
                ul.dash_b_menu_list
                  li.dash_menu_group
                    span.mb Действия
                  li: a.dash_menu_link.editModeBtn(data-edit-target='#members' data-edit-mode='#edit_members' href='#')
                    span.mb Редактировать
          
        #members.dash_box._members
          .dash_box_inner
            .box_caption Члены коллегиального органа
            ul.member_list
              +loop_while(2)
                li
                  .member_box
                    .member_avatars
                      .member_main_avatar
                        img(src='./img/member.png')
                        .member_small_avatar
                          img(src='./img/member.png')
                    .participant_name Кислицин Д.М.
                    .participant_post Председатель
                li
                  .member_box
                    .member_avatars
                      .member_main_avatar
                        img(src='./img/user_empty.png')
                        .member_small_avatar
                          img(src='./img/member.png')
                    .participant_name Морозов В.К.
                    .participant_post Секретарь <br> Кислицина. М.П.
                      
            .box_splitter
              
            .box_caption Приглашенные участники
            ul.member_list
              +loop_while(2)
                li
                  .member_box
                    .member_avatars
                      .member_main_avatar
                        img(src='./img/member.png')
                        .member_small_avatar
                          img(src='./img/member.png')
                    .participant_name Кислицин Д.М.
                    .participant_post Председатель
                li
                  .member_box
                    .member_avatars
                      .member_main_avatar
                        img(src='./img/user_empty.png')
                        .member_small_avatar
                          img(src='./img/member.png')
                    .participant_name Морозов В.К.
                    .participant_post Секретарь <br> Кислицина. М.П.
                      
        
        #edit_members(style='display:none;')
          .dash_box._create
            .dash_box_inner
              .members_holder
                .f_label Члены коллегиального органа
                ul.member_list
                  +loop_while(1)
                    li.rmUnit
                      .member_box
                        .member_avatars
                          .member_main_avatar
                            img(src='./img/member.png')
                            span.btn_red_2.unit_rm_btn.rmBtn

                        .participant_name Кислицин Д.М.
                        .participant_post Председатель
                    li.rmUnit
                      .member_box
                        .member_avatars
                          .member_main_avatar
                            img(src='./img/user_empty.png')
                            span.btn_red_2.unit_rm_btn.rmBtn

                        .participant_name Морозов В.К.
                        .participant_post Секретарь <br> Кислицина. М.П.
                    li
                      .member_box
                        .btn_v2.add_unit_btn.btn_white_2
                          span.mb.i-plus
              .members_holder
                .f_label ПРИГЛАШЕННЫЕ УЧАСТНИКИ НА ЗАСЕДАНИЕ
                ul.member_list
                  +loop_while(2)
                    li
                      .member_box
                        .member_avatars
                          .member_main_avatar

                  li
                    .member_box
                      .btn_v2.add_unit_btn.btn_white_2.userMenuBtn
                        span.mb.i-plus
                      +member_search()
                        
        .text_center.more_block.mod_2
          a.btn_v1.btn_white_2.dash_btn(href='#') ПОКАЗАТЬ ВСЕ 21 УЧАСТНИКА
            
      include ../components/preloader

    include ../components/footer_controls
