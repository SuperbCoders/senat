block variables
  - var bodyClass = 'page_create_meeting dropzone';
  - var htmlClass = 'stick_footer nav_header nav_footer_';
  - var pageTitle = 'Новое заседание драг-н-дроп';
  - var pageDescription = 'Описание страницы';
  - var activePage = 1;
  - var hasUnitNav = true;
  - var shortUnitNav = true;
  - var actionNavbarColor = 'clr_green';
  - var actionText = 'ОПУБЛИКОВАТЬ ЗАСЕДАНИЕ';
  - var customScripts = ['vendors/moment.min.js','vendors/daterangepicker.js','vendors/select2.js','vendors/jquery-ui-1.10.2.custom.min.js','vendors/tag-it.min.js','vendors/autoresize-mod.jquery.js','msg.js','create.js','files.js'];

include ../components/dashboard

extends ../components/layout
block head
block content
  .wrapper
    .drop_catcher
    include ../components/header
    .action_navbar
      include ../components/action_navbar

    .main_content
      .section_inner
        .dash_box._create
          .dash_box_inner
              .form_row.cell_v1
                .form_cell._s_100
                  label.f_label(for='question') НАЗВАНИЕ ВОПРОСА
                  .input_w
                    input#question.f_input._inp_black.input_v1
  
                .form_cell._s_75
                  .f_label КОЛЛЕГИАЛЬНЫЙ ОРГАН
                  .input_w.select_v1
                    select.select2
                      option Комитет по стратегии
                      option Комитет по стратегии 2
                      option Комитет по стратегии 3
                      option Комитет по стратегии 4
                      
                .form_cell._s_25
                  label.f_label(for='question_time') ВРЕМЯ РАССМОТРЕНИЯ
                  .input_w.has_icon.timePicker
                    input#question_time.f_input._inp_black.input_v1.timePickerVal(data-format='hh часов mm минут')
                    span.input_icon.i-timer
                    +time_picker()
  
              .members_wrapper
                .members_holder
                  .f_label ИНИЦИАТОР ВОПРОСА
                  ul.member_list
                    +loop_while(1)
                      li.rmUnit
                        .member_box
                          .member_avatars
                            .member_main_avatar
                              img(src='./img/member.png')
                              span.btn_red_2.unit_rm_btn.rmBtn
    
                          .participant_name Кислицин Д.М.
                          .participant_post Председатель
                      li.rmUnit
                        .member_box
                          .member_avatars
                            .member_main_avatar
                              img(src='./img/user_empty.png')
                              span.btn_red_2.unit_rm_btn.rmBtn
    
                          .participant_name Морозов В.К.
                          .participant_post Секретарь <br> Кислицина. М.П.
                      li
                        .member_box
                          .btn_v2.add_unit_btn.btn_white_2
                            span.mb.i-plus
    
                .members_holder
                  .f_label ДОКЛАДЧИКИ
                  ul.member_list
                    +loop_while(1)
                      li.rmUnit
                        .member_box
                          .member_avatars
                            .member_main_avatar
                              img(src='./img/member.png')
                              span.btn_red_2.unit_rm_btn.rmBtn
    
                          .participant_name Кислицин Д.М.
                          .participant_post Председатель
                      li.rmUnit
                        .member_box
                          .member_avatars
                            .member_main_avatar
                              img(src='./img/user_empty.png')
                              span.btn_red_2.unit_rm_btn.rmBtn
    
                          .participant_name Морозов В.К.
                          .participant_post Секретарь <br> Кислицина. М.П.
                      li
                        .member_box
                          .btn_v2.add_unit_btn.btn_white_2
                            span.mb.i-plus
    
                .members_holder
                  .f_label ПРИГЛАШЕННЫЕ УЧАСТНИКИ
                  ul.member_list
                    +loop_while(2)
                      li
                        .member_box
                          .member_avatars
                            .member_main_avatar
    
                    li
                      .member_box
                        .btn_v2.add_unit_btn.btn_white_2.userMenuBtn
                          span.mb.i-plus
                        +member_search()
  
              .form_row.cell_v1.cell_group
                .form_cell._s_12
                  .f_label СВЕТОФОР
                  .input_w.select_v1
                    select.select2.switchLights
                      option.light_pin._pin_orange(value='1' selected) 1
                      option.light_pin._pin_green(value='2') 2
                      option.light_pin._pin_red(value='3') 3
                    
                .form_cell._s_88
                  .f_label &nbsp;
                  .input_w
                    input.f_input._inp_black.input_v1(placeholder='Название')
              
                .form_cell._s_12
                  .input_w.select_v1
                    select.select2.switchLights
                      option.light_pin._pin_orange(value='1') 1
                      option.light_pin._pin_green(value='2') 2
                      option.light_pin._pin_red(value='3' selected) 3
                    
                .form_cell._s_88
                  .input_w
                    input.f_input._inp_black.input_v1(placeholder='Название')
              
                .form_cell._s_100
                  .input_w
                    textarea.f_input._inp_black.input_v1._h_90.autoGrow(placeholder='Комментарий')
              
              .form_row.cell_v1
                .form_cell._s_100
                  label.f_label(for='question_description') ПОЯСНЕНИЕ
                  .input_w
                    textarea#question_description.f_input._inp_black.input_v1._h_120.autoGrow(placeholder='Развернутое описание вопроса')
              
                .form_cell._s_100
                  label.f_label(for='question_description_wide') ПРОЕКТ РЕШЕНИЯ
                  .input_w
                    textarea#question_description_wide.f_input._inp_black.input_v1._h_400.autoGrow(placeholder='Развернутое описание вопроса')
                
                
              .f_label ОСНОВНЫЕ МАТЕРИАЛЫ
              .form_row.cell_v1
                .form_cell._s_33
                  .input_w.drag_catcher
                    span.drag_text ФАЙЛ ПРЕЗЕНТАЦИИ
                .form_cell._s_33
                  .input_w.drag_catcher
                    span.drag_text ФАЙЛ ПРОЕКТА РЕШЕНИЯ
                .form_cell._s_33
                  .input_w.drag_catcher
                    span.drag_text ФАЙЛ ПРИЛОЖЕНИЯ
                
              .f_label МАТЕРИАЛЫ
                
              ul.upload_list.uploadList
                li
                  .input_w.drag_catcher
                    input#file_upload.hide(type='file')
                    label.drag_link(for='file_upload') ДОБАВИТЬ
                li
                  +file_upload()
                li
                  +file_upload()
                li
                  +file_upload(true)
                li.uploadTip
                  .input_w.drag_catcher.text_upper
                    input#file_upload_2.hide(type='file')
                    span.drag_text.clr_def Переместите файлы с компьютера в окно браузера 
                    label.drag_link(for='file_upload_2') Воспользуйтесь обычной загрузкой
  
              .f_label ТЕГИ
                
              .tag_holder: ul.tag_list.tagIt
                li
                  span Заседание
                li
                  span Комитет №1
                  
              .text_center
                a.btn_v1.btn_gray_2.dash_btn(href='#') СОХРАНИТЬ ВОПРОС
          
        .text_center.more_block.mod_2
          a.btn_v1.dash_btn.btn_green_2(href='#')= actionText
          
